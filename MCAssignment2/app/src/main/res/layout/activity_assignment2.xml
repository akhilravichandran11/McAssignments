<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_assignment1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.group13.assignment2.Assignment2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:text="Patient Name"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:id="@+id/PNameLabel"
                    android:gravity="left|center"
                    android:layout_width="match_parent" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textSize="11sp"
                    android:layout_weight="0.5"
                    android:hint="Enter Name "
                    android:id="@+id/PNameText" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_weight="0.25"
                android:layout_centerHorizontal="true">


                <TextView
                    android:text="Age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/PAgeLabel"
                    android:layout_weight=".5"
                    android:gravity="left|center" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:hint="Enter Age"
                    android:inputType="number"
                    android:id="@+id/PAgeText"
                    android:layout_weight=".5" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_weight="0.25"
                android:layout_centerHorizontal="true">

                <TextView
                    android:text="Patient ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/PIDLabel"
                    android:layout_weight=".5"
                    android:gravity="left|center" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:inputType="textPersonName"
                    android:hint="Enter ID"
                    android:id="@+id/PIDText"
                    android:layout_weight=".5" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_weight="0.25"
                android:layout_centerHorizontal="true">

                <RadioGroup
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <RadioButton
                        android:text="Male"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rBMale"
                        android:layout_weight=".25"
                        android:textSize="11sp"
                        android:checked="false" />

                    <RadioButton
                        android:text="Female"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rBFemale"
                        android:textSize="11sp"
                        android:layout_weight=".25"
                        android:checked="false" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:text="Run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonRun"
                android:layout_weight="0.5"
                android:layout_margin="4dp"
                android:background="@android:color/holo_green_light" />

            <Button
                android:text="Stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonStop"
                android:layout_weight="0.5"
                android:layout_margin="4dp"
                android:background="@android:color/holo_red_dark" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/graphll"
            android:background="@android:color/darker_gray">
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
